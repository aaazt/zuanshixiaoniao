.home-header{
  display:flex;
}
.home-header1{
  color:gray;
  font-size:10px;
  border:1px solid #ccc;
  background:#eee;
  width:70%;
  height:20px;
  border-radius:3px;
  margin:0px 30px 10px 10px;
  line-height:20px;
}
.home-header2{
  color:gray;
   font-size:10px;
}
/* 轮播图样式*/
.slider,.slider image,.slider swiper{
  width:100%;
  height:390rpx;

}
/* 六宫格样式*/
.home-nav{
  display:flex;
  background:#f7f7f7;
 

}
.nav-item{
  display:flex;
  width:25%;
  height:255rpx;
  box-sizing:border-box;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  /*border-right: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;*/
 
  font-size: 28rpx;
}
.nav-item:nth-child(3n){
  border-right: 0rpx;
}
.nav-item image{
  width:102rpx;
  height:102rpx;
}
/*间隔线样式*/

.home-line1{
  height:4rpx;
  background:#000;
  width: 94%;
  margin: 5rpx auto;
}
.home-line2{
  height:1px;
  background:#000;
  width: 94%;
  margin: 0 auto;
}
/*系列产品文字样式*/
.home-title1{
  font-size:12px;
  font-weight:bold;
  text-align:center;
  margin:12px 0;
}
/*系列产品图片样式*/
.home-picture image{
  width:94%;
  height:275rpx;
  margin:4px 10px;
}
/*臻品珠宝鉴赏和一秒变钻石专家文字样式*/
.home-title2{
  font-size:10px;
 margin:15px 20px;
}
.home-title21{
  
 margin-bottom:10px;
}
/*热卖单品文字样式*/
.hot{
  width:100%;
  height:40px;
  text-align:center;
  line-height:40px;
  background-color:#f7f7f7;
  font-size:15px;
}
/*热卖单品图片样式*/
.home-hotsingle{
 display:flex;
 flex-wrap:wrap;


}
.hot-single-item{
  width:50%;
  height:280rpx;
  box-sizing:border-box;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  border-right: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  font-size: 28rpx;
 
}
.hot-single-item image{
 width:180rpx;
  height:180rpx;
background:#f7f7f7;
margin-left:50px;
}
